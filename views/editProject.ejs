<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Edit Project - Climate Solutions</title>
  <link href="/css/main.css" rel="stylesheet">
</head>
<body class="bg-base-200">

<%- include('partials/navbar', { page: '/solutions/projects' }) %>

<div class="container mx-auto p-4">
  <div class="hero bg-base-100 rounded-lg shadow">
    <div class="hero-content text-center">
      <div class="max-w-md">
        <h1 class="text-5xl font-bold">Edit Project</h1>
        <form action="/solutions/editProject/<%= project.id %>" method="POST" class="mt-6 space-y-4">

          <input type="text" name="title" value="<%= project.title %>" required class="input input-bordered w-full" />

          <input type="url" name="feature_img_url" value="<%= project.feature_img_url %>" required class="input input-bordered w-full" />

          <select name="sector_id" required class="select select-bordered w-full">
            <% sectors.forEach(sector => { %>
              <option value="<%= sector.id %>" <%= sector.id == project.sector_id ? 'selected' : '' %>><%= sector.sector_name %></option>
            <% }) %>
          </select>

          <textarea name="intro_short" required class="textarea textarea-bordered w-full"><%= project.intro_short %></textarea>
          <textarea name="summary_short" required class="textarea textarea-bordered w-full"><%= project.summary_short %></textarea>
          <textarea name="impact" required class="textarea textarea-bordered w-full"><%= project.impact %></textarea>

          <input type="url" name="original_source_url" value="<%= project.original_source_url %>" required class="input input-bordered w-full" />

          <button type="submit" class="btn btn-success w-full">Save Changes</button>
          <a href="/solutions/deleteProject/<%= project.id %>" class="btn btn-error w-full mt-4">Delete Project</a>
        </form>
      </div>
    </div>
  </div>
</div>
</body>
</html>
