<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Projects - Climate Solutions</title>
  <link href="/css/main.css" rel="stylesheet">
</head>
<body class="bg-base-200">
  <%- include('partials/navbar', { page: "/solutions/projects" }) %>

  <div class="container mx-auto p-4">
    <div class="hero bg-base-100 rounded-lg shadow">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold">Explore Our Projects</h1>
          <p class="py-6">Discover real-world climate solutions by sector.</p>
          <a href="/solutions/projects" class="btn btn-primary">View Projects</a>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-8">
      <% data.forEach(project => { %>
        <div class="card bg-base-100 shadow">
          <figure>
            <img src="https://images.pexels.com/photos/2860807/pexels-photo-2860807.jpeg" alt="<%= project.title %>">
          </figure>
          <div class="card-body">
            <h2 class="card-title"><%= project.title %></h2>
            <p><%= project.summary %></p>
            <a href="/solutions/projects/<%= project.id %>" class="btn btn-secondary">View Details</a>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
